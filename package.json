{
  "name": "typescript-template",
  "version": "0.0.0",
  "description": "a typescript template",
  "main": "index.js",
  "scripts": {
    "dev": "npm run lint && ts-node src/server.ts",
    "start": "tsc && node dist/server.js",
    "build": "tsc",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "watch": "nodemon --watch src --ext ts --delay 5 --exec npm run dev"
  },
  "author": "zhangfx",
  "license": "MIT",
  "dependencies": {
    "koa": "^2.6.2",
    "koa-router": "^7.4.0"
  },
  "devDependencies": {
    "@types/koa": "^2.0.47",
    "@types/koa-router": "^7.0.35",
    "@types/koa-static": "^4.0.0",
    "koa-static": "^5.0.0",
    "nodemon": "^1.18.9",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  }
}
